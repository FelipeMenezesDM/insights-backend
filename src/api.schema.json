{
  "openapi": "3.0.0",
  "info": {
    "version": "1.0.0",
    "title": "Insignts API",
    "description": "API para aplicação de gerenciamento de cards com conteúdo esportivo.",
    "termsOfService": "http://api_url/terms/",
    "license": {
      "name": "Apache 2.0",
      "url": "https://www.apache.org/licenses/LICENSE-2.0.html"
    }
  },
  "servers": [
    {
      "url": "http://localhost:3000/",
      "description": "Servidor local"
    }
  ],
  "paths": {
    "/insight/post": {
      "post": {
        "description": "Criar novo insight",
        "operationId": "addNewInsight",
        "parameters": [],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/InsightSchema"
              }
            }
          },
          "required": true
        },
        "responses": {
          "201": {
            "description": "O insight foi criado com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/InsightSchema"
                }
              }
            }
          },
          "400": {
            "description": "Parâmetros inválidos",
            "content": {
              "application/json": {
                "example": {
                  "message": "Falha de inserção do insight",
                  "code": "400",
                  "error": "Bad Request"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "InsightSchema": {
        "type": "object",
        "properties": {
          "texto": {
            "type": "string",
            "example": "Exemplo de conteúdo de insight da API."
          },
          "tags": {
            "$ref": "#/components/schemas/TagSchema"
          }
        },
        "required": ["texto"]
      },
      "TagSchema": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "example": "Primeira tag"
          }
        },
        "required": ["name"]
      }
    }
  }
}
